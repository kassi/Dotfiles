{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"hostname": {
			"before": " ",
			"args": {
				"only_if_ssh": true
			}
		},
		"virtualenv": {
			"before": "ⓔ  "
		},
		"branch": {
			"before": " ",
			"args": {
				"status_colors": true
			}
		},
		"remote": {
			"args": {
				"status_colors": true,
				"remote_name": false
			}
		}
	},
	"segments": {
		"left": [
			{
				"name": "hostname"
			},
			{
				"name": "virtualenv"
			},
			{
				"name": "cwd",
				"args": {
					"dir_limit_depth": 2
				}
			},
			{
				"name": "branch"
			},
			{
				"name": "remote",
				"module": "segments.git"
			},
			{
				"name": "last_status",
				"module": "powerline.segments.shell"
			}
		]
	}
}
